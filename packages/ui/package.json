{
  "name": "@azodik/ui",
  "version": "0.10.6",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "styles.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": {
      "default": "./styles.css"
    }
  },
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/azodik/design-system.git",
    "directory": "packages/ui"
  },
  "homepage": "https://github.com/azodik/design-system#readme",
  "bugs": {
    "url": "https://github.com/azodik/design-system/issues"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "typescript",
    "tailwind",
    "radix"
  ],
  "files": [
    "dist",
    "components",
    "hooks",
    "index.ts",
    "styles.css",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "node scripts/update-version.mjs",
    "build": "tsup && pnpm run add-directives",
    "add-directives": "sed -i '' '1s/^/\"use client\";\\n/' dist/index.js && sed -i '' '1s/^/\"use client\";\\n/' dist/index.cjs",
    "dev": "node scripts/update-version.mjs && tsup && tsup --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "node ../../scripts/clean.mjs",
    "prepublishOnly": "node ../../scripts/prepare-publish.mjs prepare packages/ui && pnpm build",
    "postpublish": "node ../../scripts/prepare-publish.mjs restore packages/ui"
  },
  "dependencies": {
    "@azodik/icons": "workspace:*",
    "azodik-ui-core": "workspace:*",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "minisearch": "^7.2.0"
  },
  "peerDependenciesMeta": {
    "minisearch": {
      "optional": false
    }
  }
}

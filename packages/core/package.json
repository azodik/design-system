{
  "name": "azodik-ui-core",
  "version": "0.10.5",
  "main": "dist/index.css",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "type": "module",
  "author": "Bandna Paikaray <bandna.paikaray@azodik.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/azodik/design-system.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/azodik/design-system#readme",
  "bugs": {
    "url": "https://github.com/azodik/design-system/issues"
  },
  "keywords": [
    "css",
    "design-system",
    "ui",
    "components",
    "theme",
    "dark-mode",
    "responsive"
  ],
  "files": [
    "*.css",
    "*.d.ts",
    "components/",
    "tokens/",
    "styles/"
  ],
  "exports": {
    ".": {
      "default": "./dist/index.css"
    },
    "./base.css": {
      "default": "./dist/base.css"
    },
    "./index.css": {
      "default": "./dist/index.css"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "mkdir -p dist && cp -r components styles tokens *.css *.d.ts icons-catalog.json dist/",
    "dev": "vite dev --port 3003",
    "lint": "echo 'No linting needed for CSS'",
    "type-check": "echo 'No type checking needed for CSS'",
    "clean": "node ../../scripts/clean.mjs && rm -rf dist",
    "prepublishOnly": "node ../../scripts/prepare-publish.mjs prepare packages/core && pnpm build",
    "postpublish": "node ../../scripts/prepare-publish.mjs restore packages/core"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}

{
  "name": "azodik-ui-core",
  "version": "0.9.0",
  "main": "index.css",
  "types": "index.d.ts",
  "license": "MIT",
  "type": "module",
  "author": "Bandna Paikaray <bandna.paikaray@azodik.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/azodik/design-system.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/azodik/design-system#readme",
  "bugs": {
    "url": "https://github.com/azodik/design-system/issues"
  },
  "keywords": [
    "css",
    "design-system",
    "ui",
    "components",
    "theme",
    "dark-mode",
    "responsive"
  ],
  "files": [
    "*.css",
    "*.d.ts",
    "components/",
    "tokens/",
    "styles/"
  ],
  "exports": {
    ".": {
      "default": "./index.css"
    },
    "./base.css": {
      "default": "./base.css"
    },
    "./index.css": {
      "default": "./index.css"
    }
  },
  "scripts": {
    "build": "echo 'Azodik UI CSS is ready'",
    "dev": "vite dev --port 3003",
    "lint": "echo 'No linting needed for CSS'",
    "type-check": "echo 'No type checking needed for CSS'",
    "clean": "node ../../scripts/clean.mjs",
    "prepublishOnly": "node ../../scripts/prepare-publish.mjs prepare packages/core && pnpm build",
    "publish": "npm publish --access public --force"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}

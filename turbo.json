{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "publish": {
      "dependsOn": ["^build"]
    },
    "prepublishOnly": {
      "dependsOn": ["^build"]
    },
    "deploy": {
      "dependsOn": ["^build"]
    },
    "typegen": {
      "dependsOn": ["^build"]
    }
  }
}
